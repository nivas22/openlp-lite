<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openlp.lite" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light">

        <!--<meta-data android:name="AA_DB_NAME" android:value="songs.sqlite" />-->
        <!--<meta-data android:name="AA_DB_VERSION" android:value="3"/>-->

        <activity
            android:name=".activity.ListViewSongsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName=".activity.OpenlpLiteActivity" >
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.myfirstapp.MainActivity" />
        </activity>

        <activity
            android:label="List of Songs"
            android:name=".activity.ListSongsActivity">
        </activity>

    <!---    <activity
            android:label="List of Songs"
            android:name=".ListViewSongsActivity">
